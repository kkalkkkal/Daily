<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    tools:context=".SignupActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#F87F22">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="normal"
                android:textSize="30dp"
                android:textColor="#ffffff"
                android:text="Sign Up"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="300dp"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:layout_gravity="center">

                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="300dp"
                    android:background="#C3C3C3"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"
                    android:textColorHint="#ffffff"
                    android:padding="10dp"
                    android:hint="Email"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:drawableStart="@drawable/ic_person_black_24dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/emailText"/>

            </LinearLayout>

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="300dp"
                android:background="#C3C3C3"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:textColorHint="#ffffff"
                android:padding="10dp"
                android:hint="Password"
                android:drawableLeft="@drawable/ic_https_black_24dp"
                android:drawableStart="@drawable/ic_https_black_24dp"
                android:id="@+id/passwordText"
                android:inputType="textPassword"/>

            <EditText android:layout_height="wrap_content"
                android:layout_width="300dp"
                android:background="#C3C3C3"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:textColorHint="#ffffff"
                android:padding="10dp"
                android:hint="Confirm Password"
                android:drawableLeft="@drawable/ic_https_black_24dp"
                android:drawableStart="@drawable/ic_https_black_24dp"
                android:id="@+id/passwordText2"
                android:inputType="textPassword"/>

            <EditText android:layout_height="wrap_content"
                android:layout_width="300dp"
                android:background="#C3C3C3"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:textColorHint="#ffffff"
                android:padding="10dp"
                android:hint="nickname"
                android:drawableLeft="@drawable/ic_https_black_24dp"
                android:drawableStart="@drawable/ic_https_black_24dp"
                android:id="@+id/nicknameText"
                android:inputType="textPassword"/>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/getUserImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Choose\nprofile\nImage"/>
                <ImageView
                    android:id="@+id/userImage"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:maxHeight="100dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/splash_image"/>
            </LinearLayout>

            <Button android:layout_height="wrap_content"
                android:layout_width="300dp"
                android:background="#3A7FC2"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:text="sign up"
                android:layout_gravity="center"
                android:id="@+id/registerButton"/>

            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="17dp"
                android:text="Back to login"
                android:layout_gravity="center"
                android:padding="10dp"
                android:id="@+id/backToLogin"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>