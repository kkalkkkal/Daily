<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/ScrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:id="@+id/groupList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"></LinearLayout>
        </ScrollView>
        <View
            android:id="@+id/groupListBackground"
            android:background="#80000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/groupList_opt1_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="70dp"
            android:layout_marginBottom="102dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="그룹 생성"
            android:visibility="invisible"/>
        <ImageButton
            android:id="@+id/groupList_opt1_b"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="90dp"
            android:src="@drawable/icons_team"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/groupList_opt2_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="70dp"
            android:layout_marginBottom="162dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="그룹 가입"
            android:visibility="invisible"/>
        <ImageButton
            android:id="@+id/groupList_opt2_b"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="150dp"
            android:src="@drawable/icons_team"
            android:visibility="invisible"/>


        <ImageButton
            android:id="@+id/groupList_bt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="10dp"
            android:background="@null"
            android:contentDescription="@string/action_settings"
            android:rotation="0"
            android:src="@drawable/icons_plus" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>